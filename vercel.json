{
  "version": 2,
  "outputDirectory": "build",
  "public": true,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index.ts" },
    { "source": "/(.*)", "destination": "/build/index.html" }
  ],
  "redirects": [
    { "source": "/(.*)", "destination": "/build/index.html", "permanent": false }
  ]
}
